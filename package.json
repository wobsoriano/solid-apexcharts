{
  "version": "0.1.3",
  "name": "solid-apexcharts",
  "description": "Solid component for ApexCharts",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/solid-apexcharts.git"
  },
  "keywords": [
    "solid",
    "apexcharts",
    "charts",
    "visualizations"
  ],
  "author": "Robert Soriano",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/solid-apexcharts#readme",
  "dependencies": {
    "apexcharts": "^3.33.1",
    "solid-js": "^1.1.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "bumpp": "^7.1.1",
    "eslint": "^8.10.0",
    "lint-staged": "^12.3.5",
    "rollup": "^2.69.1",
    "rollup-preset-solid": "^1.4.0",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist",
    "rollup.config.js"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue,md,html}": [
      "eslint --fix"
    ]
  }
}
